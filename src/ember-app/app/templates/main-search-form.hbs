<h3 class="ui header">{{t "forms.main-search-form.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
    <div class="field search">
        <label class="searchLabel">{{t "forms.main-search-form.searchMessage"}}</label>
        {{input type="text" class="searchText" value=searchText}}
        <button type="button" class="search" onclick={{action "runSearch"}}>
            <i class="icon search"></i>
        </button>
    </div>
    <div class="field">
        {{pdf-view
            startPage = 1
            pdf="http://localhost:6500/api/file?fileUploadKey=5aac5d07-7c96-4ccd-99ec-7cdc6c70c6a6&fileName=2.pdf" toolbarComponent="pdf-view-toolbar"
        }}
    </div>
</form>